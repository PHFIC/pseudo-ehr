<div class='card bg-dark text-white h-100'>
  <div class='card-header'>
    Care Plans
  </div>
  <div class='card-body'>
    <% @care_plans.each do |care_plan| %>
      <%= sanitize(care_plan.text&.div) %>
      <span class="badge <%= care_plan.status == 'active' ? 'text-bg-primary' : 'text-bg-secondary' %>"><%= sanitize(care_plan.status) %></span>
      <p class="text-muted"><%= display_date( care_plan.created&.to_date ) %></p>
      <hr />
    <% end %>

    <% if false %>
    <table class='table table-striped table-dark status'>
      <thead>
        <tr>
          <th>Condition (code)</th>
          <th>Clinical Status</th>
          <th>Verified</th>
          <th>Assert Date</th>
        </tr>
      </thead>
      <tbody>
        <% @conditions.each do |condition| %>
          <tr>
            <td><%= sanitize( condition.code&.text ) %> (<%= sanitize( condition.code&.coding&.first&.system ) %>/<%= sanitize( condition.code&.coding&.first&.code ) %>)</td>
            <td><%= sanitize( condition.clinicalStatus&.text ) %></td>
            <td><%= sanitize( condition.verificationStatus&.text ) %></td>
            <td>
                <% condition.extension.each do |extension| %>
                    <% if extension.url == "http://hl7.org/fhir/StructureDefinition/condition-assertedDate" %>
                        <%= display_date( extension.valueDateTime.to_date ) %>
                    <% end %>
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>

  </div>
</div>
