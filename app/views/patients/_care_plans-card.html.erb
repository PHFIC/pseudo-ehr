<div class='card bg-dark text-white h-100'>
  <div class='card-header'>
    Care Plans (<%= @care_plans.count %>)
  </div>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>
      <thead>
        <tr>
          <th>Status</th>
          <th>Type
          <th>Category</th>
          <th>Date</th>
        </tr>
      <thead>
      <tdata>
        <% @care_plans.each do |care_plan| %>
          <tr>
            <td><span class="badge <%= care_plan.status == 'active' ? 'text-bg-primary' : 'text-bg-secondary' %>"><%= sanitize(care_plan.status) %></span></td>
            <td><%= link_to sanitize(care_plan.text&.div), care_plan_path(care_plan.id) %></td>
            <td><%= display_categories( care_plan.category ) %></td>
            <td><%= display_date( care_plan.created&.to_date ) %></td>
          </tr>
        <% end %>
      </tdata>
    </table>
  </div>
</div>
