<section class='container'>
  <section class='row'>
    <% if @patient.present? %>
      <div class='col-6 card-container'>
        <%= render 'dashboard/patient-card' %>
      </div>
      <% if @medications.present? %>
        <div class='col-6 card-container'>
          <%= render 'dashboard/medications-card' %>
        </div>
      <% end %>
      <% if @functional_statuses.present? %>
        <div class='col-6 card-container'>
          <%= render 'dashboard/functional-status-card' %>
        </div>
      <% end %>
      <% if @cognitive_statuses.present? %>
        <div class='col-6 card-container'>
          <%= render 'dashboard/cognitive-status-card' %>
        </div>
      <% end %>
      <% if @splasch_observations.present? %>
        <div class='col-6 card-container'>
          <%= render 'dashboard/splasch-observations-card' %>
        </div>
      <% end %>
    <% else %>
      Not available
    <% end %>
  </section>
</section>
