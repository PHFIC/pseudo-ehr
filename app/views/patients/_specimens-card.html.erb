<div class='card bg-dark text-white h-100'>
  <div class='card-header'>
    Specimens
  </div>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>
      <thead>
        <tr>
          <th>Type (code)</th>
          <th>Date</th>
          <th>Quantity</th>
          <th>Body Site</th>
        </tr>
      </thead>
      <tbody>
        <% @specimens.each do |specimen| %>
          <tr>
            <td><%= display_code( specimen.type ) %></td>
            <td><%= display_date( specimen.collection&.collectedDateTime&.to_date ) %></td>
            <td><%= sanitize( specimen.collection&.quantity&.value&.to_s ) %> <%= sanitize( specimen.collection&.quantity&.unit ) %></td>
            <td><%= display_code( specimen.collection&.bodySite ) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
