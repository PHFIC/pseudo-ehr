<div class='card bg-dark text-white h-100'>
  <div class='card-header'>
    <%= link_to "Encounters (#{@encounters.count})", patient_encounters_path(@patient.id) %>
  </div>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>
      <thead>
        <tr>
          <th>Start Date</th>
          <th>Category</th>
          <th>Status</th>
          <th>Location</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>

        <% @encounters.each do |encounter| %>
          <tr>
            <td><%= display_date(encounter.period&.start&.to_date) %></td>
            <td><%= "#{encounter&.local_class&.display} (#{encounter&.local_class&.code})" %></td>
            <td><%= encounter.status %><%#  display_human_name(encounter&.providers&.first&.fetch(:individual)&.name&.first) %></td>
            <td><%= sanitize( encounter.location&.first&.location&.display ) %></td>
            <td><%= link_to "View", encounter_path(encounter.id) %></td>
          </tr>
        <% end %>

      </tbody>
    </table>
  </div>
</div>
