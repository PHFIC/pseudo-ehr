<% if flash.count > 0 %>
	<section class='container messages'>
		<section class='row col-12'>
			<% flash.each do |key, value| %>
				<% if key.is_a?(String) %>
				  <div data-alert class="<%= flash_class(key) %> alert fade show col-12" role="alert">
				    <%= value %>
				  </div>
				<% end %>
			<% end %>
		</section>
	</section>
<% end %>
