<div class='row patient-info'>
  <div class='col'>
    <table class='table table-striped table-dark status' style='width: 500px;'>
      <tr>
        <td>Condition</td>
        <td><%= object.code.coding.first&.display %></td>
      </tr>
      <tr>
        <td>Code</td>
        <td><%= object.code.coding.first&.code %></td>
      </tr>
      <tr>
        <td>Onset Date</td>
        <td><%= object.onsetDateTime&.to_date %></td>
      </tr>
      <tr>
        <td>Clinical Status</td>
        <td><%= object.clinicalStatus.coding.first&.code %></td>
      </tr>
    </table>
  </div>
</div>