<div class='row patient-info justify-content-center'>
  <div class='col table-responsive-sm'>
    <table class='table table-striped table-dark status'>
      <tr>
        <td class='col-3'>Observation Status: </td>
        <td class='col-3'><%= sanitize(object.status) || "unavailable" %></td>
      </tr>
      <tr>
        <td class='col-3'>Category: </td>
        <td class='col-3'><%= object.code&.coding&.first&.display || "unavailable" %></td>
      </tr>
      <tr>
        
        <% if object.valueString.include?(":") %>
          <% index = object.valueString.rindex(":") %>
          <td class='col-3' colspan="2">
            <%= object.valueString.from(0).to(index) %> 
            <span style="color:brown;"><%= object.valueString.from(index + 1) %></span>
          </td>
          <% else %>
          <td class='col-3' colspan="2"><%= object.valueString %></td>
        <% end %>
      </tr>
    </table>
  </div>
</div>