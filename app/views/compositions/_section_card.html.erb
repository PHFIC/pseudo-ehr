
<div class='card bg-dark text-white'>
  <div class='card-header' id="sectionHeader-<%= index %>" >
    <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#sectionBody-<%= index %>" aria-expanded="false" aria-controls="sectionHeader-<%= index %>">
        <%= section["title"] %>
    </button>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-default view" data-bs-toggle="modal" data-bs-target="#sectionNarrative-<%= index %>" aria-label="view">
      <span class="view" data-bs-toggle="tooltip" title="View directive">ðŸ”—</span>
    </button>

    <!-- Modal -->
    <%= render 'section_narrative', section: section, index: index %>
  </div>
  <div id="sectionBody-<%= index %>" class="collapse" aria-labelledby="sectionHeader-<%= index %>" data-bs-parent="#sections">
    <div class='card-body'>
      <br>
      <% section["objects"].each do |object| %>
        <%= render object.resourceType + "_card", object: object %>
        <br>
      <% end %>
    </div>
  </div>
</div>

