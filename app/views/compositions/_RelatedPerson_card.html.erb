<div class='row patient-info justify-content-center'>
  <div class='col-10 table-responsive-sm'>
    <table class='table table-striped table-dark status'>
      <tr>
        <td colspan="2">Name: </td>
        <td><%= display_human_name(object.name[0]) %></td>
      </tr>
      <tr>
        <td>Relationships: </td>
        <% object.relationship.each do |relation| %>
          <td><%= relation.coding[0].display %></td>
        <% end %>
      </tr>
      
      <% object.telecom.each do |contact| %>
        <tr>
          <td colspan="2"><%= "#{contact.system&.capitalize}:" %></td>
          <td colspan="2"><%= contact.value %></td>
        </tr>
      <% end %>
      
    </table>
  </div>
</div>