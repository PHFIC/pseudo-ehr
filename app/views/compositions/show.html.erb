<section class='container'>
  <section class='row'>
    <% if @composition.present? %>
      <div class='col-6 card-container'>
        <%= sanitize(@composition.title) %>
      </div>
    <% else %>
      Not available
    <% end %>
  </section>
  <section class='row'>
    <div class='col-6 card-container'>
      <%= render partial: 'dashboard/patient-card'%>
    </div>
    <div class='col-6 card-container'>
      <% @composition.section.each do |section| %>
       <div class='row'>
        <%= render 'section_card', section: section %>
       </div>
       <br>
      <% end %>
    </div>
  </section>
</section>

