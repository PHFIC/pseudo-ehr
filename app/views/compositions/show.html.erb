<section class='container'>
  <section class='row'>
    <% if @composition.present? %>
      <div class='col-lg-6 card-container'>
        <%= sanitize(@composition.title) %>
      </div>
    <% else %>
      Not available
    <% end %>
  </section>
  <section class='row'>
    <div class='col-lg-6 card-container'>
      <%= render partial: 'dashboard/patient-card'%>
    </div>
    <div class='col-lg-6 card-container'>


      <div class='card bg-dark text-white'>
        <%= render 'composition_card', composition: @composition %>
        <table class='table table-striped table-dark status'>
          <% @composition.section.each_with_index do |composition, index| %>
            <%= render 'section_card', composition: @composition, index: index %>
          <% end %>
        </table>
      </div>


    </div>
  </section>
</section>

