<div class='card bg-dark text-white'>
  <div class='card-header'>
    Server Capability Statement
  </div>
  <div class='card-body'>
    <div class='row patient-info'>
      <div class='col-5'>
        <%= 'TODO server image' %>
      </div>
      <div class='col-6'>
        <table class='table table-striped table-dark status'>
          <tr>
            <td>Title</td>
            <td><%= @metadata.title %></td>
          </tr>
          <tr>
            <td>URL</td>
            <td><%= @metadata.url %></td>
          </tr>
          <tr>
            <td>FHIR Version</td>
            <td><%= @metadata.fhirVersion %></td>
          </tr>
          <tr>
            <td>Status</td>
            <td><%= @metadata.status %></td>
          </tr>
          <tr>
            <td>Software</td>
            <td>
              <%= @metadata.software&.name %><br />
              <%= @metadata.software&.version %><br />
              <%= @metadata.software&.releaseDate&.strftime('%x') %>
            </td>
          </tr>
        </table>
      </div>
    </div>
    <div class='row address'>
      <p>
        Formats supported:
      </p>
      <table class='table table-striped table-dark status'>
        <% @metadata.format&.each do |t| %>
          <%= t.to_s.downcase %>
        <% end %>
       </table>
    </div>
  </div>
</div>
