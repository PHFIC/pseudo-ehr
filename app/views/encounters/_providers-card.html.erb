<div class='card bg-dark text-center h-100'>
    <h4 class='card-header'>Providers</h4>
    <div class='card-body'>
        <table class='table table-striped table-dark status'>
            <thead>
                <tr>
                    <th>Role</th>
                    <th>Name</th>
                    <th>Contact</th>
                </tr>
            </thead>
            <tbody>
                
                <% @encounter.providers.each do |provider| %>
                    <tr>
                      <td><%= display_code(provider[:role].code.first) %></td>
                        <td><%= display_human_name(provider[:individual].name.first) %></td>
                        <td>
                        
                        <% provider[:individual].telecoms.each do |telecom| %>
                          <%= display_telecom(telecom) %>
                        <% end %>
                        
                        </td>
                    </tr>
                <% end %>
                
            </tbody>
        </table>
    </div>
</div>