<div class='card bg-dark text-white'>
  <div class='card-header' id="providerHeader">
    <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#providerBody" aria-expanded="false" aria-controls="providerBody">
        Providers
    </button>
  </div>
  <div id="providerBody" class="collapse" aria-labelledby="providerHeader" data-bs-parent="#cards">
    <div class='card-body'>
      <br>
      <table class='table table-striped table-dark status'>
        
        <% @encounter.providers&.each do |provider| %>
            <tr>
                <td>Name: <%= provider[:name] %></td>
                <td>Role: <%= provider[:role] %></td>
                <td>Care Period: <%= "#{display_date(@provider[:period]&.start&.to_date)} - #{display_date(@provider[:period]&.end&.to_date)}" %></td>
            </tr>
        <% end %>
        
      </table>
    </div>
  </div>
</div>