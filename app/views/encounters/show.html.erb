<section class='container'>
  <section class='dashboard-header-text'>
    <%= render partial: 'patient-info' %>
    <br>
  </section >
  <section class='row'>
    <h2>Organization: <%= @encounter.service_provider %></h2>
    <div class='card bg-dark'>
        <div class='card-body'>
            <table class='table table-striped table-dark status caption-top'>
                <caption><h2>Encounter Details</h2></caption>
                <tr>
                    <td>Period: <%= "#{display_date(@encounter.period&.start&.to_date)} - #{display_date(@encounter.period&.end&.to_date)}" %></td>
                    <td>Identifier: <%= "#{@encounter.identifier.value} (#{@encounter.identifier.use.upcase})" %></td>
                    <td>Status: <%= @encounter.status %></td>
                </tr>
                <tr>
                    <td>Encounter Type: <%= display_code(@encounter.type&.first) %></td>
                    <td>Reason: <%= display_code(@encounter.reason_code) %></td>
                    <td>Service Type: <%= display_code(@encounter.service_type) %></td>
                </tr>
            </table>
        </div>
    </div>
  </section>
  <section class='row' id='cards'>
    <div class='col-lg-6 card-container'>
        <%= render partial: 'providers-card' %>
    </div>
    <div class='col-lg-6 card-container'>
        <%= render partial: 'assessments-card' %>
    </div>
  </section>
</section>