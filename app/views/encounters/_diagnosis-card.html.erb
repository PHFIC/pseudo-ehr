<div class='card bg-dark text-center h-100'>
    <h4 class='card-header'>Diagnoses</h4>
    <div class='card-body'>
        <table class='table table-striped table-dark status'>
            <thead>
                <tr>
                    <th>Use</th>
                    <th>Condition</th>
                    <th>Onset Date</th>
                    <th>Clinical Status</th>
                    <!--<th>Asserter</th>-->
                </tr>
            </thead>
            <tbody>
                
                <% @encounter.diagnoses.each do |diagnosis| %>
                    <tr>
                        <td><%= diagnosis[:use] %></td>
                        <td><%= display_code(diagnosis[:condition].code) %></td>
                        <td><%= display_date(diagnosis[:condition].onsetDate) %></td>
                        <td><%= diagnosis[:condition].clinicalStatus&.coding&.first&.code %></td>
                        <!--<td><%= diagnosis[:condition].asserter %></td>-->
                    </tr>
                <% end %>
                
            </tbody>
        </table>
    </div>
</div>