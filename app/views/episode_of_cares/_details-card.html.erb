 <div class='card bg-dark h-100'>
    <div class='card-body'>
        <table class='table table-striped table-dark status caption-top'>
            <caption>
              <h2>Episode Details</h2>
            </caption>
            <tr>
              <td>Period: </td>
              <td><%= "#{display_date(@episode_of_care.period&.start&.to_date)} - #{display_date(@episode_of_care.period&.end&.to_date)}" %></td>
            </tr>
            <tr>
              <td>Status: </td>
              <td><%= @episode_of_care.status.capitalize %></td>
            </tr>
            <tr>
              <td>Type: </td>
              <td>
                
                <% @episode_of_care.type.each do |code| %>
                  | <%= display_code(code) %>
                <% end %>
                
              </td>
            </tr>
        </table>
    </div>
</div>