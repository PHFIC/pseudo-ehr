<div class='card bg-dark text-white'>
  <div class='card-header'>
    Medications
  </div>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>
      <tr>
        <td colspan='2'>Total medications: </td>
        <td><%= @medications.count %></td>
      </tr>
      <% @medications.each do |medication| %>
        <tr>
          <% medication.codings.each do |coding| %>
            <td><%= sanitize(coding.display) %></td>
            <td><%= sanitize(medication.status) %></td>
            <td><%= sanitize(coding.code) %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>
