<div class='card bg-dark text-white h-100'>
  <div class='card-header'>
    Compositions (<%= @compositions.count %>)
  </div>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>
       
      <tr>
        <th scope='col'>Title</th>
        <th scope='col'>Type</th>
        <th scope='col'>Date</th>
        <th scope='col'>Status</th>
      </tr>
      <% @compositions.each do |composition| %>
        <tr>
          <td><%= link_to composition.title, composition_path(composition.id) %></td>
          <td><%= composition.type&.coding&.first&.display%></td>
          <td><%= display_date(composition.date&.to_date) %></td>
          <td><%= composition.status %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>