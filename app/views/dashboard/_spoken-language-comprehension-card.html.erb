<div class='card bg-dark text-white'>
  <div class='card-header'>
    Spoken Language Comprehension
  </div>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>
      <% @spoken_language_comprehension_observations.each do |observation| %>
        <tr>
          <td><%= display_date(observation.effective) %></td>
          <td><%= link_to display_code(observation.code), 
                        splasch_observation_path(id: observation.id) %></td>
          <!--<td><%= display_performers(observation.performer) %></td>-->
        </tr>
      <% end %>
    </table>
  </div>
</div>
