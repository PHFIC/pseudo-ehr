<div class='card bg-dark text-white'>
  <div class='card-header'>
    <%= link_to 'SPLASCH Data', splasch_collections_path(patient: @patient.id) %>
  </div>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>
      <% @splasch_collections.each do |splasch_collection| %>
        <tr>
          <td><%= display_date(splasch_collection.effective) %></td>
          <td><%= link_to display_code(splasch_collection.code), 
                        splasch_collection_path(id: splasch_collection.id) %></td>
          <!--<td><%= display_performers(sp.performer) %></td>-->
        </tr>
      <% end %>
    </table>
  </div>
</div>
