<div class='card bg-dark text-white h-100'>
  <div class='card-header'>
    Document References (<%= @document_references.count %>)
  </div>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>
       
      <tr>
        <th scope='col'>Type</th>
        <th scope='col'>Author</th>
        <th scope='col'>Date</th>
      </tr>
      <% @document_references.each do |document_reference| %>
        <% if document_reference.type %>
        <tr>
          <td><%= document_reference.type.coding.first.display %></td>
          <td><%= document_reference.author.first.display %></td>
          <td><%= display_date(document_reference.date.to_date) %></td>
        </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>