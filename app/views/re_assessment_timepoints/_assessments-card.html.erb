<div class='card bg-dark text-white'>
  <div class='card-header' id="assessmentHeader">
    <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#assessmentBody" aria-expanded="false" aria-controls="assessmentBody">
        Assessments (<%= @reassessment_timepoint.assessments.count %>)
    </button>
  </div>
  <div id="assessmentBody" class="collapse" aria-labelledby="assessmentHeader" data-bs-parent="#cards">
    <div class='card-body'>
      <table class='table table-striped table-dark status'>
        <% @reassessment_timepoint.assessments.each do |assessment| %>
          <tr>
            <td><%= display_date(assessment.effective) %></td>
            <td><%= link_to display_code(assessment.code), 
                          functional_status_path(id: assessment.id) %></td>
            
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>