<div class='card bg-dark text-white h-100'>
  <h4 class='card-header'>Assessments</h4>
  <%= link_to "Add Observation", new_re_assessment_timepoint_path(:encounter_id => @reassessment_timepoint.part_of.id), class: 'card-link d-flex justify-content-end' %>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>
      <% @reassessment_timepoint.assessments.each do |assessment| %>
        <tr>
          <td><%= display_date(assessment.effective) %></td>
          <td><%= link_to display_code(assessment.code), 
                          functional_status_path(id: assessment.id) %></td>
            
        </tr>
      <% end %>
    </table>
  </div>
  <div class="card-footer text-muted" style="font-size: 12px;">
      <p><small>FHIR Queries:</small></p>
      <ol class='list-group'>
                
        <% @reassessment_timepoint.fhir_queries.each do |query| %>
          <li class='list-group-item'><small><%= query %></small></li>
        <% end %>
                
      </ol>
  </div>
</div>