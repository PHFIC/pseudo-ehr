<div class='card bg-dark text-white'>
  <div class='card-header' id="providerHeader">
    <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#providerBody" aria-expanded="false" aria-controls="providerBody">
        Providers (<%= @reassessment_timepoint.providers.count %>)
    </button>
  </div>
  <div id="providerBody" class="collapse" aria-labelledby="providerHeader" data-bs-parent="#cards">
    <div class='card-body'>
      <br>
      <table class='table table-striped table-dark status'>
        
        <thead>
            <tr>
                <th>Role</th>
                <th>Name</th>
                <th>Contact</th>
            </tr>
        </thead>
        <tbody>
                
            <% @reassessment_timepoint.providers.each do |provider| %>
                <tr>
                    <td><%= display_code(provider[:role].code.first) %></td>
                    <td><%= display_human_name(provider[:individual].name.first) %></td>
                    <td>
                        
                        <% provider[:individual].telecoms.each do |telecom| %>
                          <%= display_telecom(telecom) %>
                        <% end %>
                        
                    </td>
                </tr>
             <% end %>
                
        </tbody>
        
      </table>
    </div>
  </div>
</div>