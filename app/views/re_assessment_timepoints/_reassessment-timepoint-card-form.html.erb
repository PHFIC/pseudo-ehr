<div class='card bg-dark text-white'>
  <div class='card-header'>
    <%= render partial: 'encounters/patient-info' %>
    <br>
  </div >
  <div class='card-body'>
    <h2 class='text-center'>Organization: <%= @reassessment_timepoint.service_provider.name %></h2>
    <div class='card bg-dark'>
        <div class='card-body'>
            <table class='table table-striped table-dark status caption-top'>
                <caption>
                    <h2>Timepoint Details</h2>
                    <span class='text-end'>
                        <b>Part Of</b>: &nbsp;
                        <%= link_to "Encounter-#{@reassessment_timepoint.part_of.id}", encounter_path(@reassessment_timepoint.part_of.id) %>
                    </span>
                </caption>
                <tr>
                  <td class="form-group">
                    <label for="period_start">Start of Encounter: </label>
                    <input type="date" name="period_start" class="form-control" id="period_start" placeholder="<%=Date.today%>">
                  </td>
                  <td class="form-group">
                    <label for="period_end">End of Encounter: </label>
                    <input type="date" class="form-control" id="period_end" name="period_end" placeholder="<%=Date.today%>">
                  </td>
                </tr>
                <tr>
                  <td class="form-group">
                    <label for="identifier">Identifier: </label>
                    <input type="text" class="form-control" id="identifier" name="identifier" rows="1">
                  </td>
                  <td class="form-group">
                    <label for="status">Status: </label>
                    <select class="form-control" id="status" name="status">
                    	<option>planned</option>
                      <option>arrived</option>
                      <option>triaged</option>
                      <option>in-progress</option>
                      <option>onleave</option>
                      <option>finished</option>
                      <option>cancelled</option>
                    </select>
                  </td>
                </tr>
                <tr>
                  <td class="form-group">
                    <label for="type">Encounter Type: </label>
                    <textarea class="form-control" id="type" name="type" rows="1"></textarea>
                  </td>
                  <td class="form-group">
                    <label for="reason">Reason: </label>
                    <textarea class="form-control" id="reason" name="reason" rows="1"></textarea>
                  </td>
                  <td class="form-group">
                    <label for="service_type">Service Type: </label>
                    <textarea class="form-control" id="service_type" name="service_type" rows="1"></textarea>
                  </td>
                </tr>
                <tr>
                  <td class="form-group">
                    <label for="Practitioners">Practitioners (Select any): </label>
                    <select multiple class="form-control" id="practitioners" name="practitioners">
                      <%= @all_practitioners.each do |practitioner| %>
                        <option value="<%= practitioner.id%>"><%= display_human_name(practitioner.name[0])%></option>
                      <% end%>
                    </select>
                  </td>
                </tr>
              </table>
        </div>
    </div>
  </div>
</div>
